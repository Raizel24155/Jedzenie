<Window x:Class="WpfApp1.Okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Okno" Height="300" Width="200">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label>Name</Label>
            <TextBox x:Name="Name_name"></TextBox>
            <Label>Skałdniki</Label>
            <TextBox x:Name="sk_name"></TextBox>
            <Label>Kraj</Label>
            <TextBox x:Name="kraj_name"></TextBox>
            <Label>Hajs</Label>
            <TextBox x:Name="hajs_id"></TextBox>
        </StackPanel>

        <Button x:Name="Save" Grid.Row="1" Click="Save_Click">Save</Button>
        <Button x:Name="Cancel" Grid.Row="1" Grid.Column="2" Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
